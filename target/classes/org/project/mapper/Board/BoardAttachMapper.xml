<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.project.mapper.Board.BoardAttachMapper">	
	<!-- 첨부파일 등록 -->
	<insert id="insert"> 
		insert into board_attach (uuid, uploadpath, filename, filetype, bno) values (#{uuid}, #{uploadPath}, #{fileName}, #{fileType}, #{bno}) 
	</insert>
	
	
	<!-- 특정 게시물에 달린 첨부파일 찾기 -->	
	<select id="findByBno" resultType="org.project.domain.Board.BoardAttachVO">
		select * from board_attach where bno = #{bno}
	</select>
	
	<!-- 오래된(하루전) 파일들 가져오기 -->
	<select id="getOldFiles" resultType="org.project.domain.Board.BoardAttachVO">
		select * from board_attach where uploadPath = to_char(sysdate-1, 'yyyy/mm/dd')
	</select>

	
	<!-- 특정 게시물에 달린 모든 첨부파일 삭제 -->
	<delete id="deleteAll">
		delete from board_attach where bno = #{bno}
	</delete>	
</mapper>